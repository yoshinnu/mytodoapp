<!doctype html>
<html>

<head>
  <%- include("./share/stylesheets.ejs") %>
  <meta charset=" utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="generator" content="Jekyll v3.8.5">
  <title><%= title %></title>

  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>
  <!-- Custom styles for this template -->
</head>

<body style="background-color: rgb(39, 39, 41);">
  <main role="main">
    <section class="jumbotron text-center edit-create-bg">
      <div class="container">
        <h1 class="jumbotron-heading font-weight-bold"><%= title %></h1>
      </div>
    </section>

    <div class="album py-5 bg-light">
      <div class="container">
        <div class="col-md-6 mx-auto">
          <div class="card mb-6 mx-auto shadow-sm">
            <div class="card-body">
              <form action="/admin/shop/create/post" method="POST" onsubmit="return check()" id="prizeupdate">
                <div>
                  <label>name: </label>
                </div>
                <input type="text" name="name" class="text-black" style="white-space: pre;">
                <div>
                  <label>pointcost: </label>
                </div>
                <input type="text" name="pointcost" class="text-black">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <input type="submit" class="btn btn-sm btn-outline-secondary" id="btn-done" value="Done">
                    <input type="button" class="btn btn-sm btn-outline-secondary" onclick="location.href='/home/shop'"
                      value="Back">
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include("./share/footer.ejs") %>
  <%- include("./share/javascript.ejs") %>
</body>

</html>