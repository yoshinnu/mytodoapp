<!doctype html>
<html id="html">

<head>
  <%- include("./share/stylesheets.ejs") %>
  <meta charset=" utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="generator" content="Jekyll v3.8.5">
  <title><%= title %></title>
  <!-- Custom styles for this template -->
</head>

<body style="background-color: rgb(39, 39, 41);" id="body">
  <%- include("./share/navbar.ejs") %>
  <main role="main">
    <section class="jumbotron home home-bg">
      <strong>
        <h1 class="jumbotron-heading text-black home">admin home</h1>
        <p class="text-black" id="username"></p>
      </strong>
      <div class="container" style="min-height: 250px;">

      </div>
    </section>
    <div class="album  bg-light">
      <p style="padding-left: 20px;">管理者名　<%= user.username%></p>
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <a href="/home" class="btn btn-primary my-2" id="doingBtn" style="width: 150px;">UserList</a>
            <a href="/home/shop" class="btn btn-secondary my-2" id='compliteBtn' style="width: 150px;">ShopEdit</a>
            <a href="#" class="btn btn-secondary my-2" style="width: 150px;">LogsEdit</a>
          </div>
          <div class="col-md-9 text-left" id="logs">
            <div class="card mb-9 shadow-sm scroll">
              <div class="card-body py-1" style="min-height: 200px; max-height: 200px;">
                <ul class="list-unstyled">
                  <li>your prize get </li>
                  <li>new login </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container py-3 text-center">
        <strong class="shop-cardstyle-title">USERS LIST</strong>
        <div class="row py-5">
          <% for(let i=0;i < users.length; i++){ %>
          <div class="col-md-3">
            <div class="card mb-3 shadow-sm" style="border-radius: 10px;">
              <div class="card-body shopcard  " style="border-radius: 10px;">
                <ul class="list-unstyled text-left">
                  <li>user id: <%= users[i].id%></li>
                  <li>name: <%= users[i].username%></li>
                  <li>email: <%= users[i].email%></li>
                  <li>point: <%= users[i].point%></li>
                  <li>admin: <%= users[i].is_admin%></li>
                  <li>achivement number: <%= users[i].achivement_id%></li>
                </ul>
                <div class="btn-group">
                  <form action="/admin/user/edit" method="GET" id="useredit">
                    <input type="hidden" name="id" value=<%= users[i].id %>>
                    <input type="submit" class="btn btn-sm btn-dark" id="btn-edit" value="edit">
                  </form>
                  <% if(users[i].id !== user.id) { %>
                  <form action="/admin/user/delete/post" method="POST" onsubmit="return check()" id="userdelete">
                    <input type="hidden" name="id" value=<%= users[i].id %>>
                    <input type="submit" class="btn btn-sm btn-danger" id="btn-delete" value="delete">
                  </form>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
          <% }; %>
        </div>
      </div>
    </div>
    </div>
  </main>
  <%- include("./share/footer.ejs") %>
  <%- include("./share/javascript.ejs") %>
</body>

</html>